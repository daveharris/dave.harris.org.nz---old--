<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p class="alt-post">
  <span>For logged in user only</span>
  <%= link_to 'Edit', edit_post_path(@post) %>
  <%= link_to 'Destroy', @post, :confirm => 'Are you sure?', :method => :delete %>
</p>
