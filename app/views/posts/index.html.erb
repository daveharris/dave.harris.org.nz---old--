<% @posts.each do |post| %>
  <div class="content">
    <h2 class="left"><%= link_to post.title, post %></h2>
    <p class="right">Posted on <%=post.created_at.strftime("%m/%d/%y %I:%M%p") %></p>
    <div class="clear"></div>
    <p><%= post.content %></p>
    <div class="alt-post content">
      <p>
        <span>For logged in user only</span>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
      </p>
    </div>
  </div>
<% end %>

<br />

<%= link_to 'Create new post', new_post_path %>
